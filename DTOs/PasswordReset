using System.Collections.Generic;
using System.ComponentModel.DataAnnotations;

namespace parkingMaster.DTOs
{
    
    public class PasswordResetDTO
    {
        // Automatic properties
        [Required]
        public string Email { get; set; }
        public string Password { get; set; }
        public IList<SecurityQuestionDTO> SecurityQuestionDTOs { get; set; }

        // Constructors
        public ResetPasswordDTO() { }
        public ResetPasswordDTO(string email)
        {
            Email = email;
        }
        public PasswordResetDTO(string email, IList<SecurityQuestionDTO> securityQuestionDTOs)
        {
            Username = username;
            SecurityQuestionDTOs = securityQuestionDTOs;
        }
        public PasswordResetDTO(string email, string password)
        {
            Email = email;
            Password = password;
        }
    }
}
